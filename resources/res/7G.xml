<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="435dp" android:layout_height="match_parent" android:paddingStart="7dp">
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
        <ImageView android:id="@+id/lineUnitDistance" android:background="@drawable/id7_set_right_line" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/btnDvrUSB"/>
        <CheckBox android:id="@+id/kesaiwei_dvr_OFF" android:background="@drawable/kesaiwei_1920x720_evo_id7_chk_selector_right2" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="14dp" android:button="@null" android:layout_marginStart="15dp"/>
        <TextView android:textSize="22sp" android:textColor="#fff" android:gravity="left|center_vertical|center_horizontal|center|start" android:layout_width="wrap_content" android:layout_height="53dp" android:text="@string/lb_off" android:layout_marginStart="53dp"/>
        <ImageButton android:id="@+id/btnDvrOFF" android:background="@drawable/kesaiwei_1920x720_evo_id7_btn_set_right_t2" android:layout_width="match_parent" android:layout_height="53dp"/>
        <CheckBox android:id="@+id/kesaiwei_dvr_CVBS" android:background="@drawable/kesaiwei_1920x720_evo_id7_chk_selector_right2" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="14dp" android:button="@null" android:layout_below="@+id/btnDvrOFF" android:layout_marginStart="15dp"/>
        <TextView android:textSize="22sp" android:textColor="#fff" android:gravity="left|center_vertical|center_horizontal|center|start" android:layout_width="wrap_content" android:layout_height="53dp" android:text="CVBS DVR" android:layout_below="@+id/btnDvrOFF" android:layout_marginStart="53dp"/>
        <ImageButton android:id="@+id/btnDvrCVBS" android:background="@drawable/kesaiwei_1920x720_evo_id7_btn_set_right_t2" android:layout_width="match_parent" android:layout_height="53dp" android:layout_below="@+id/btnDvrOFF"/>
        <CheckBox android:id="@+id/kesaiwei_dvr_USB" android:background="@drawable/kesaiwei_1920x720_evo_id7_chk_selector_right2" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="14dp" android:button="@null" android:layout_below="@+id/btnDvrCVBS" android:layout_marginStart="15dp"/>
        <TextView android:textSize="22sp" android:textColor="#fff" android:gravity="left|center_vertical|center_horizontal|center|start" android:layout_width="wrap_content" android:layout_height="53dp" android:text="USB DVR" android:layout_below="@+id/btnDvrCVBS" android:layout_marginStart="53dp"/>
        <ImageButton android:id="@+id/btnDvrUSB" android:background="@drawable/kesaiwei_1920x720_evo_id7_btn_set_right_t2" android:layout_width="match_parent" android:layout_height="53dp" android:layout_below="@+id/btnDvrCVBS"/>
        <RelativeLayout android:id="@+id/viewDvrApp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/lineUnitDistance">
            <TextView android:textSize="22sp" android:textColor="#fff" android:gravity="left|center_vertical|center_horizontal|center|start" android:id="@+id/txtDvrApk" android:layout_width="wrap_content" android:layout_height="65dp" android:text="@string/lbl_dvr_apk" android:layout_marginStart="29dp"/>
            <androidx.recyclerview.widget.RecyclerView android:id="@+id/appList" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="-13dp" android:layout_below="@+id/txtDvrApk"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
