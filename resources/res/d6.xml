<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent" android:textDirection="ltr" android:layoutDirection="ltr">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:id="@+id/view0" android:layout_width="match_parent" android:layout_height="44.8dp">
            <ImageButton android:id="@+id/btnDvrOFF" android:background="@drawable/small_audi_btn_set_app_item" android:layout_width="match_parent" android:layout_height="match_parent"/>
            <CheckBox android:id="@+id/kesaiwei_dvr_OFF" android:background="@drawable/small_audi_chk_selector" android:clickable="false" android:layout_width="40dp" android:layout_height="40dp" android:button="@null" android:layout_centerVertical="true" android:layout_marginEnd="64dp" android:layout_alignParentEnd="true"/>
            <TextView android:textSize="18sp" android:textColor="#fff" android:gravity="left|center_vertical|center_horizontal|center|start" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/lb_off" android:layout_marginStart="22.4dp"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/view1" android:layout_width="match_parent" android:layout_height="44.8dp" android:layout_marginTop="1.2dp" android:layout_below="@+id/view0">
            <ImageButton android:id="@+id/btnDvrCVBS" android:background="@drawable/small_audi_btn_set_app_item" android:layout_width="match_parent" android:layout_height="match_parent"/>
            <CheckBox android:id="@+id/kesaiwei_dvr_CVBS" android:background="@drawable/small_audi_chk_selector" android:clickable="false" android:layout_width="40dp" android:layout_height="40dp" android:button="@null" android:layout_centerVertical="true" android:layout_marginEnd="64dp" android:layout_alignParentEnd="true"/>
            <TextView android:textSize="18sp" android:textColor="#fff" android:gravity="left|center_vertical|center_horizontal|center|start" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="CVBS DVR" android:layout_marginStart="22.4dp"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/view2" android:layout_width="match_parent" android:layout_height="44.8dp" android:layout_marginTop="1.2dp" android:layout_below="@+id/view1">
            <ImageButton android:id="@+id/btnDvrUSB" android:background="@drawable/small_audi_btn_set_app_item" android:layout_width="match_parent" android:layout_height="match_parent"/>
            <CheckBox android:id="@+id/kesaiwei_dvr_USB" android:background="@drawable/small_audi_chk_selector" android:clickable="false" android:layout_width="40dp" android:layout_height="40dp" android:button="@null" android:layout_centerVertical="true" android:layout_marginEnd="64dp" android:layout_alignParentEnd="true"/>
            <TextView android:textSize="18sp" android:textColor="#fff" android:gravity="left|center_vertical|center_horizontal|center|start" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="USB DVR" android:layout_marginStart="22.4dp"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/viewDvrApp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="1.2dp" android:layout_below="@+id/view2">
            <androidx.recyclerview.widget.RecyclerView android:id="@+id/appList" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
