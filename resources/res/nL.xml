                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>
        <RelativeLayout android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <ImageView android:id="@+id/compass" android:background="@drawable/ldklz_carcool_zhinanzhendi" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <ImageView android:background="@drawable/ldklz_carcool_zhinanzhen" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </RelativeLayout>
        <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>
