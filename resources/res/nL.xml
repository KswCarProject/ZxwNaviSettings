    <ImageView android:id="@+id/zhongxian" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="120px" android:layout_marginTop="692px" android:src="@drawable/ldklz_carcool_zhongxian"/>
