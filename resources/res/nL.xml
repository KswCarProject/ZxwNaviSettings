                <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true">
                    <TextView android:textSize="16sp" android:textColor="#fff" android:gravity="center" android:id="@+id/tvRotateText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0"/>
                    <TextView android:textSize="16sp" android:textColor="#fff" android:gravity="center" android:paddingBottom="40dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="r/min"/>
