<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="wrap_content" android:textDirection="ltr" android:layoutDirection="ltr">
    <ImageButton android:id="@+id/btnApp" android:background="?attr/ksw_landrover_btn_large" android:layout_width="match_parent" android:layout_height="65dp"/>
    <CheckBox android:id="@+id/chkApp" android:background="?attr/ksw_landrover_chk_selector0" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:button="@null" android:layout_centerVertical="true" android:layout_marginStart="30dp"/>
    <ImageView android:id="@+id/appIcon" android:layout_width="53dp" android:layout_height="53dp" android:layout_centerVertical="true" android:layout_marginStart="19dp" android:layout_toEndOf="@+id/chkApp"/>
