<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="435dp" android:layout_height="match_parent">
    <ScrollView android:id="@+id/mScrollView" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
            <ImageView android:id="@+id/lineUnitDistance" android:background="@drawable/id7_set_right_line" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/btnDistanceUnitImperial"/>
            <ImageView android:id="@+id/lineUnitOil" android:background="@drawable/id7_set_right_line" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/btnOilUnitUK"/>
            <TextView android:textSize="22sp" android:textColor="#fff" android:gravity="left|center_vertical|center_horizontal|center|start" android:id="@+id/txtDistanceUnit" android:layout_width="wrap_content" android:layout_height="78dp" android:text="@string/lbl_unit_distance" android:layout_marginStart="29dp"/>
            <CheckBox android:id="@+id/kesaiwei_distance_UnitMetric" android:background="@drawable/kesaiwei_1920x720_evo_id7_chk_selector_right2" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="1dp" android:button="@null" android:layout_below="@+id/txtDistanceUnit" android:layout_marginStart="15dp"/>
            <TextView android:textSize="22sp" android:textColor="#fff" android:gravity="left|center_vertical|center_horizontal|center|start" android:layout_width="wrap_content" android:layout_height="53dp" android:layout_marginTop="-13dp" android:text="@string/lbl_unit_distance_metric" android:layout_below="@+id/txtDistanceUnit" android:layout_marginStart="53dp"/>
            <ImageButton android:id="@+id/btnDistanceUnitMetric" android:background="@drawable/kesaiwei_1920x720_evo_id7_btn_set_right_t2" android:layout_width="match_parent" android:layout_height="53dp" android:layout_marginTop="-13dp" android:layout_below="@+id/txtDistanceUnit"/>
            <CheckBox android:id="@+id/kesaiwei_distance_UnitImperial" android:background="@drawable/kesaiwei_1920x720_evo_id7_chk_selector_right2" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="14dp" android:button="@null" android:layout_below="@+id/btnDistanceUnitMetric" android:layout_marginStart="15dp"/>
            <TextView android:textSize="22sp" android:textColor="#fff" android:gravity="left|center_vertical|center_horizontal|center|start" android:layout_width="wrap_content" android:layout_height="53dp" android:text="@string/lbl_unit_distance_imperial" android:layout_below="@+id/btnDistanceUnitMetric" android:layout_marginStart="53dp"/>
            <ImageButton android:id="@+id/btnDistanceUnitImperial" android:background="@drawable/kesaiwei_1920x720_evo_id7_btn_set_right_t2" android:layout_width="match_parent" android:layout_height="53dp" android:layout_below="@+id/btnDistanceUnitMetric"/>
            <TextView android:textSize="22sp" android:textColor="#fff" android:gravity="left|center_vertical|center_horizontal|center|start" android:id="@+id/txtOilUnit" android:layout_width="wrap_content" android:layout_height="78dp" android:text="@string/lbl_unit_oil" android:layout_below="@+id/lineUnitDistance" android:layout_marginStart="29dp"/>
            <CheckBox android:id="@+id/kesaiwei_oil_UnitL" android:background="@drawable/kesaiwei_1920x720_evo_id7_chk_selector_right2" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="1dp" android:button="@null" android:layout_below="@+id/txtOilUnit" android:layout_marginStart="15dp"/>
            <TextView android:textSize="22sp" android:textColor="#fff" android:gravity="left|center_vertical|center_horizontal|center|start" android:layout_width="wrap_content" android:layout_height="53dp" android:layout_marginTop="-13dp" android:text="L" android:layout_below="@+id/txtOilUnit" android:layout_marginStart="53dp"/>
            <ImageButton android:id="@+id/btnOilUnitL" android:background="@drawable/kesaiwei_1920x720_evo_id7_btn_set_right_t2" android:layout_width="match_parent" android:layout_height="53dp" android:layout_marginTop="-13dp" android:layout_below="@+id/txtOilUnit"/>
            <CheckBox android:id="@+id/kesaiwei_oil_UnitUS" android:background="@drawable/kesaiwei_1920x720_evo_id7_chk_selector_right2" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="14dp" android:button="@null" android:layout_below="@+id/btnOilUnitL" android:layout_marginStart="15dp"/>
            <TextView android:textSize="22sp" android:textColor="#fff" android:gravity="left|center_vertical|center_horizontal|center|start" android:layout_width="wrap_content" android:layout_height="53dp" android:text="gal(US)" android:layout_below="@+id/btnOilUnitL" android:layout_marginStart="53dp"/>
            <ImageButton android:id="@+id/btnOilUnitIUS" android:background="@drawable/kesaiwei_1920x720_evo_id7_btn_set_right_t2" android:layout_width="match_parent" android:layout_height="53dp" android:layout_below="@+id/btnOilUnitL"/>
            <CheckBox android:id="@+id/kesaiwei_oil_UnitUK" android:background="@drawable/kesaiwei_1920x720_evo_id7_chk_selector_right2" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="14dp" android:button="@null" android:layout_below="@+id/btnOilUnitIUS" android:layout_marginStart="15dp"/>
            <TextView android:textSize="22sp" android:textColor="#fff" android:gravity="left|center_vertical|center_horizontal|center|start" android:layout_width="wrap_content" android:layout_height="53dp" android:text="gal(UK)" android:layout_below="@+id/btnOilUnitIUS" android:layout_marginStart="53dp"/>
            <ImageButton android:id="@+id/btnOilUnitUK" android:background="@drawable/kesaiwei_1920x720_evo_id7_btn_set_right_t2" android:layout_width="match_parent" android:layout_height="53dp" android:layout_below="@+id/btnOilUnitIUS"/>
            <TextView android:textSize="22sp" android:textColor="#fff" android:gravity="left|center_vertical|center_horizontal|center|start" android:id="@+id/txtTempUnit" android:layout_width="wrap_content" android:layout_height="78dp" android:text="@string/lbl_unit_temp" android:layout_below="@+id/lineUnitOil" android:layout_marginStart="29dp"/>
            <CheckBox android:id="@+id/kesaiwei_temp_unitC" android:background="@drawable/kesaiwei_1920x720_evo_id7_chk_selector_right2" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="1dp" android:button="@null" android:layout_below="@+id/txtTempUnit" android:layout_marginStart="15dp"/>
            <TextView android:textSize="22sp" android:textColor="#fff" android:gravity="left|center_vertical|center_horizontal|center|start" android:layout_width="wrap_content" android:layout_height="53dp" android:layout_marginTop="-13dp" android:text="℃" android:layout_below="@+id/txtTempUnit" android:layout_marginStart="53dp"/>
            <ImageButton android:id="@+id/btnTempUnitC" android:background="@drawable/kesaiwei_1920x720_evo_id7_btn_set_right_t2" android:layout_width="match_parent" android:layout_height="53dp" android:layout_marginTop="-13dp" android:layout_below="@+id/txtTempUnit"/>
            <CheckBox android:id="@+id/kesaiwei_temp_unitF" android:background="@drawable/kesaiwei_1920x720_evo_id7_chk_selector_right2" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="14dp" android:button="@null" android:layout_below="@+id/btnTempUnitC" android:layout_marginStart="15dp"/>
            <TextView android:textSize="22sp" android:textColor="#fff" android:gravity="left|center_vertical|center_horizontal|center|start" android:layout_width="wrap_content" android:layout_height="53dp" android:text="°F" android:layout_below="@+id/btnTempUnitC" android:layout_marginStart="53dp"/>
            <ImageButton android:id="@+id/btnTempUnitF" android:background="@drawable/kesaiwei_1920x720_evo_id7_btn_set_right_t2" android:layout_width="match_parent" android:layout_height="53dp" android:layout_below="@+id/btnTempUnitC"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
