<?xml version="1.0" encoding="utf-8"?>
<com.szchoiceway.zxwlib.SpeedPaneWithCompassView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
