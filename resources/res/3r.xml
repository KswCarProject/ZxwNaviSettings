<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent" android:textDirection="ltr" android:layoutDirection="ltr">
    <ScrollView android:id="@+id/mScrollView" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:id="@+id/scrollLayout" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="18sp" android:textColor="#fff" android:gravity="left|center_vertical|center_horizontal|center|start" android:id="@+id/txtDistanceUnit" android:layout_width="wrap_content" android:layout_height="44.8dp" android:layout_marginTop="1.2dp" android:text="@string/lbl_unit_distance" android:layout_marginStart="22.4dp"/>
            <RelativeLayout android:id="@+id/view0" android:layout_width="match_parent" android:layout_height="44.8dp" android:layout_marginTop="1.2dp" android:layout_below="@+id/txtDistanceUnit">
                <ImageButton android:id="@+id/btnDistanceUnitMetric" android:background="@drawable/small_audi_btn_set_app_item" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginBottom="0dp" android:layout_alignParentBottom="true" android:layout_marginEnd="0dp" android:layout_alignParentEnd="true"/>
                <CheckBox android:id="@+id/kesaiwei_distance_UnitMetric" android:background="@drawable/small_audi_chk_selector" android:clickable="false" android:layout_width="40dp" android:layout_height="40dp" android:button="@null" android:layout_centerVertical="true" android:layout_marginEnd="64dp" android:layout_alignParentEnd="true"/>
                <TextView android:textSize="18sp" android:textColor="#fff" android:gravity="left|center_vertical|center_horizontal|center|start" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/lbl_unit_distance_metric" android:layout_marginStart="22.4dp"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/view1" android:layout_width="match_parent" android:layout_height="44.8dp" android:layout_marginTop="1.2dp" android:layout_below="@+id/view0">
                <ImageButton android:id="@+id/btnDistanceUnitImperial" android:background="@drawable/small_audi_btn_set_app_item" android:layout_width="match_parent" android:layout_height="44.8dp" android:layout_marginTop="1.2dp"/>
                <CheckBox android:id="@+id/kesaiwei_distance_UnitImperial" android:background="@drawable/small_audi_chk_selector" android:clickable="false" android:layout_width="40dp" android:layout_height="40dp" android:button="@null" android:layout_centerVertical="true" android:layout_marginEnd="64dp" android:layout_alignParentEnd="true"/>
                <TextView android:textSize="18sp" android:textColor="#fff" android:gravity="left|center_vertical|center_horizontal|center|start" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/lbl_unit_distance_imperial" android:layout_marginStart="22.4dp"/>
            </RelativeLayout>
            <TextView android:textSize="18sp" android:textColor="#fff" android:gravity="left|center_vertical|center_horizontal|center|start" android:id="@+id/txtOilUnit" android:layout_width="wrap_content" android:layout_height="44.8dp" android:layout_marginTop="1.2dp" android:text="@string/lbl_unit_oil" android:layout_below="@+id/view1" android:layout_marginStart="22.4dp"/>
            <RelativeLayout android:id="@+id/view2" android:layout_width="match_parent" android:layout_height="44.8dp" android:layout_marginTop="1.2dp" android:layout_below="@+id/txtOilUnit">
                <ImageButton android:id="@+id/btnOilUnitL" android:background="@drawable/small_audi_btn_set_app_item" android:layout_width="match_parent" android:layout_height="match_parent"/>
                <CheckBox android:id="@+id/kesaiwei_oil_UnitL" android:background="@drawable/small_audi_chk_selector" android:clickable="false" android:layout_width="40dp" android:layout_height="40dp" android:button="@null" android:layout_centerVertical="true" android:layout_marginEnd="64dp" android:layout_alignParentEnd="true"/>
                <TextView android:textSize="18sp" android:textColor="#fff" android:gravity="left|center_vertical|center_horizontal|center|start" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="L" android:layout_marginStart="22.4dp"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/view3" android:layout_width="match_parent" android:layout_height="44.8dp" android:layout_marginTop="1.2dp" android:layout_below="@+id/view2">
                <ImageButton android:id="@+id/btnOilUnitIUS" android:background="@drawable/small_audi_btn_set_app_item" android:layout_width="match_parent" android:layout_height="match_parent"/>
                <CheckBox android:id="@+id/kesaiwei_oil_UnitUS" android:background="@drawable/small_audi_chk_selector" android:clickable="false" android:layout_width="40dp" android:layout_height="40dp" android:button="@null" android:layout_centerVertical="true" android:layout_marginEnd="64dp" android:layout_alignParentEnd="true"/>
                <TextView android:textSize="18sp" android:textColor="#fff" android:gravity="left|center_vertical|center_horizontal|center|start" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="gal(US)" android:layout_marginStart="22.4dp"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/view4" android:layout_width="match_parent" android:layout_height="44.8dp" android:layout_marginTop="1.2dp" android:layout_below="@+id/view3">
                <ImageButton android:id="@+id/btnOilUnitUK" android:background="@drawable/small_audi_btn_set_app_item" android:layout_width="match_parent" android:layout_height="match_parent"/>
                <CheckBox android:id="@+id/kesaiwei_oil_UnitUK" android:background="@drawable/small_audi_chk_selector" android:clickable="false" android:layout_width="40dp" android:layout_height="40dp" android:button="@null" android:layout_centerVertical="true" android:layout_marginEnd="64dp" android:layout_alignParentEnd="true"/>
                <TextView android:textSize="18sp" android:textColor="#fff" android:gravity="left|center_vertical|center_horizontal|center|start" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="gal(UK)" android:layout_marginStart="22.4dp"/>
            </RelativeLayout>
            <TextView android:textSize="18sp" android:textColor="#fff" android:gravity="left|center_vertical|center_horizontal|center|start" android:id="@+id/txtTempUnit" android:layout_width="wrap_content" android:layout_height="44.8dp" android:layout_marginTop="1.2dp" android:text="@string/lbl_unit_temp" android:layout_below="@+id/view4" android:layout_marginStart="22.4dp"/>
            <RelativeLayout android:id="@+id/view5" android:layout_width="match_parent" android:layout_height="44.8dp" android:layout_marginTop="1.2dp" android:layout_below="@+id/txtTempUnit">
                <ImageButton android:id="@+id/btnTempUnitC" android:background="@drawable/small_audi_btn_set_app_item" android:layout_width="match_parent" android:layout_height="match_parent"/>
                <CheckBox android:id="@+id/kesaiwei_temp_unitC" android:background="@drawable/small_audi_chk_selector" android:clickable="false" android:layout_width="40dp" android:layout_height="40dp" android:button="@null" android:layout_centerVertical="true" android:layout_marginEnd="64dp" android:layout_alignParentEnd="true"/>
                <TextView android:textSize="18sp" android:textColor="#fff" android:gravity="left|center_vertical|center_horizontal|center|start" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="℃" android:layout_marginStart="22.4dp"/>
            </RelativeLayout>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="44.8dp" android:layout_marginTop="1.2dp" android:layout_below="@+id/view5">
                <ImageButton android:id="@+id/btnTempUnitF" android:background="@drawable/small_audi_btn_set_app_item" android:layout_width="match_parent" android:layout_height="match_parent"/>
                <CheckBox android:id="@+id/kesaiwei_temp_unitF" android:background="@drawable/small_audi_chk_selector" android:clickable="false" android:layout_width="40dp" android:layout_height="40dp" android:button="@null" android:layout_centerVertical="true" android:layout_marginEnd="64dp" android:layout_alignParentEnd="true"/>
                <TextView android:textSize="18sp" android:textColor="#fff" android:gravity="left|center_vertical|center_horizontal|center|start" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="°F" android:layout_marginStart="22.4dp"/>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
