<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="998dp" android:layout_height="402dp" android:textDirection="ltr" android:layoutDirection="ltr">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:id="@+id/view0" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageButton android:id="@+id/btnDvrOFF" android:background="@drawable/ksw_landrover_btn_large" android:layout_width="match_parent" android:layout_height="65dp"/>
            <CheckBox android:id="@+id/kesaiwei_dvr_OFF" android:background="@drawable/ksw_landrover_chk_selector0" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:button="@null" android:layout_centerVertical="true" android:layout_marginStart="30dp"/>
            <TextView android:textSize="23sp" android:textColor="#fff" android:gravity="left|center_vertical|center_horizontal|center|start" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/lb_off" android:layout_centerVertical="true" android:layout_marginStart="80dp"/>
            <ImageView android:background="@drawable/landrover_settings_list_line" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/btnDvrOFF"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/view1" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/view0">
            <ImageButton android:id="@+id/btnDvrCVBS" android:background="@drawable/ksw_landrover_btn_large" android:layout_width="match_parent" android:layout_height="65dp"/>
            <CheckBox android:id="@+id/kesaiwei_dvr_CVBS" android:background="@drawable/ksw_landrover_chk_selector0" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:button="@null" android:layout_centerVertical="true" android:layout_marginStart="30dp"/>
            <TextView android:textSize="23sp" android:textColor="#fff" android:gravity="left|center_vertical|center_horizontal|center|start" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="CVBS DVR" android:layout_centerVertical="true" android:layout_marginStart="80dp"/>
            <ImageView android:background="@drawable/landrover_settings_list_line" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/btnDvrCVBS"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/view2" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/view1">
            <ImageButton android:id="@+id/btnDvrUSB" android:background="@drawable/ksw_landrover_btn_large" android:layout_width="match_parent" android:layout_height="65dp"/>
            <CheckBox android:id="@+id/kesaiwei_dvr_USB" android:background="@drawable/ksw_landrover_chk_selector0" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:button="@null" android:layout_centerVertical="true" android:layout_marginStart="30dp"/>
            <TextView android:textSize="23sp" android:textColor="#fff" android:gravity="left|center_vertical|center_horizontal|center|start" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="USB DVR" android:layout_centerVertical="true" android:layout_marginStart="80dp"/>
            <ImageView android:background="@drawable/landrover_settings_list_line" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/btnDvrUSB"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/viewDvrApp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/view2">
            <androidx.recyclerview.widget.RecyclerView android:id="@+id/appList" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
