        <TextView android:textSize="18sp" android:textColor="#fff" android:gravity="left|center_vertical|center_horizontal|center|start" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/lbl_bt_type2" android:layout_marginStart="22.4dp"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/viewExternalBt" android:visibility="visible" android:layout_width="match_parent" android:layout_height="44.8dp" android:layout_marginTop="1.2dp" android:layout_below="@+id/view1">
        <ImageButton android:id="@+id/btnExternalBT" android:background="@drawable/small_audi_btn_set_app_item" android:layout_width="match_parent" android:layout_height="match_parent"/>
        <CheckBox android:id="@+id/kesaiwei_External_BT" android:background="@drawable/small_audi_chk_selector" android:clickable="false" android:layout_width="40dp" android:layout_height="40dp" android:button="@null" android:layout_centerVertical="true" android:layout_marginEnd="64dp" android:layout_alignParentEnd="true"/>
